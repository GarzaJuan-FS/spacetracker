<div class="page-header">
  <h1>Edit Planet: <%= planet.name %></h1>
  <p>Update the information for this planet</p>
</div>

<div class="form-container">
  <% if (typeof error !== 'undefined') { %>
  <div
    style="
      background: #f8d7da;
      color: #721c24;
      padding: 1rem;
      border-radius: 5px;
      margin-bottom: 2rem;
    "
  >
    <strong>Error:</strong> <%= error %>
  </div>
  <% } %>

  <form
    action="/planets/<%= planet.id %>?_method=PUT"
    method="POST"
    enctype="multipart/form-data"
  >
    <div class="form-group">
      <label for="name">Planet Name *</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= planet.name %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="size">Size (km diameter)</label>
      <input
        type="number"
        id="size"
        name="size"
        value="<%= planet.size || '' %>"
      />
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description">
<%= planet.description || '' %></textarea
      >
    </div>

    <div class="form-group">
      <label for="image">Planet Image</label>
      <% if (planet.image) { %>
      <div style="margin-bottom: 1rem">
        <p>Current image:</p>
        <img
          src="<%= planet.image %>"
          alt="<%= planet.name %>"
          style="max-width: 200px; border-radius: 5px"
        />
      </div>
      <% } %>
      <input type="file" id="image" name="image" accept="image/*" />
      <small style="color: #666; display: block; margin-top: 0.5rem">
        Upload a new image to replace the current one (optional)
      </small>
    </div>

    <div style="margin-top: 2rem">
      <button type="submit" class="btn btn-success">Update Planet</button>
      <a href="/planets/<%= planet.id %>" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>
