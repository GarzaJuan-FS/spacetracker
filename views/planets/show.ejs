<div class="page-header">
  <h1>Planet Details: <%= planet.name %></h1>
  <p>Explore this fascinating world and its characteristics</p>
</div>

<div class="resource-detail">
  <% if (planet.image) { %>
  <div class="resource-image">
    <img src="<%= planet.image %>" alt="<%= planet.name %>" />
  </div>
  <% } else { %>
  <div
    class="resource-image"
    style="
      background: linear-gradient(45deg, #4ecdc4, #44a08d);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 5rem;
    "
  >
    ğŸª
  </div>
  <% } %>

  <div class="resource-info">
    <h2><%= planet.name %></h2>

    <div class="info-grid">
      <div class="info-item">
        <strong>Size:</strong>
        <span
          ><%= planet.size ? planet.size.toLocaleString() + ' km' : 'Unknown'
          %></span
        >
      </div>

      <div class="info-item">
        <strong>Created:</strong>
        <span><%= new Date(planet.createdAt).toLocaleDateString() %></span>
      </div>

      <div class="info-item">
        <strong>Last Updated:</strong>
        <span><%= new Date(planet.updatedAt).toLocaleDateString() %></span>
      </div>
    </div>

    <% if (planet.description) { %>
    <div class="description">
      <h3>Description</h3>
      <p><%= planet.description %></p>
    </div>
    <% } %>

    <div class="actions">
      <a href="/planets/<%= planet.id %>/edit" class="btn btn-primary"
        >Edit Planet</a
      >
      <a href="/planets" class="btn btn-secondary">Back to Planets</a>
      <form
        method="POST"
        action="/planets/<%= planet.id %>?_method=DELETE"
        style="display: inline"
        onsubmit="return confirm('Are you sure you want to delete this planet?')"
      >
        <button type="submit" class="btn btn-danger">Delete Planet</button>
      </form>
    </div>
  </div>
</div>
