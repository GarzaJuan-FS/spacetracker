<div class="page-header">
    <h1>Edit Star: <%= star.name %></h1>
    <p>Update the information for this star</p>
</div>

<div class="form-container">
    <% if (typeof error !== 'undefined') { %>
        <div style="background: #f8d7da; color: #721c24; padding: 1rem; border-radius: 5px; margin-bottom: 2rem;">
            <strong>Error:</strong> <%= error %>
        </div>
    <% } %>
    
    <form action="/stars/<%= star.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Star Name *</label>
            <input type="text" id="name" name="name" value="<%= star.name %>" required />
        </div>
        
        <div class="form-group">
            <label for="size">Size (km diameter)</label>
            <input type="number" id="size" name="size" value="<%= star.size || '' %>" />
        </div>
        
        <div class="form-group">
            <label for="galaxyId">Galaxy</label>
            <select id="galaxyId" name="galaxyId">
                <option value="">Select Galaxy (optional)</option>
                <% galaxies.forEach(galaxy => { %>
                    <option value="<%= galaxy.id %>" <%= star.galaxyId == galaxy.id ? 'selected' : '' %>><%= galaxy.name %></option>
                <% }) %>
            </select>
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description"><%= star.description || '' %></textarea>
        </div>
        
        <div class="form-group">
            <label for="image">Star Image</label>
            <% if (star.image) { %>
                <div style="margin-bottom: 1rem;">
                    <p>Current image:</p>
                    <img src="<%= star.image %>" alt="<%= star.name %>" style="max-width: 200px; border-radius: 5px;" />
                </div>
            <% } %>
            <input type="file" id="image" name="image" accept="image/*" />
            <small style="color: #666; display: block; margin-top: 0.5rem;">
                Upload a new image to replace the current one (optional)
            </small>
        </div>
        
        <div style="margin-top: 2rem;">
            <button type="submit" class="btn btn-success">Update Star</button>
            <a href="/stars/<%= star.id %>" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
