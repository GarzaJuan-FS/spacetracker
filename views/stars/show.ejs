<div class="page-header">
  <h1>Star Details: <%= star.name %></h1>
  <p>Explore this magnificent star and its properties</p>
</div>

<div class="resource-detail">
  <% if (star.image) { %>
  <div class="resource-image">
    <img src="<%= star.image %>" alt="<%= star.name %>" />
  </div>
  <% } else { %>
  <div
    class="resource-image"
    style="
      background: linear-gradient(45deg, #ff6b6b, #ffd93d);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 5rem;
    "
  >
    ‚≠ê
  </div>
  <% } %>

  <div class="resource-info">
    <h2><%= star.name %></h2>

    <div class="info-grid">
      <div class="info-item">
        <strong>Size:</strong>
        <span
          ><%= star.size ? star.size.toLocaleString() + ' km' : 'Unknown'
          %></span
        >
      </div>

      <% if (star.Galaxy) { %>
      <div class="info-item">
        <strong>Galaxy:</strong>
        <span
          ><a href="/galaxies/<%= star.Galaxy.id %>"
            ><%= star.Galaxy.name %></a
          ></span
        >
      </div>
      <% } %>

      <div class="info-item">
        <strong>Created:</strong>
        <span><%= new Date(star.createdAt).toLocaleDateString() %></span>
      </div>

      <div class="info-item">
        <strong>Last Updated:</strong>
        <span><%= new Date(star.updatedAt).toLocaleDateString() %></span>
      </div>
    </div>

    <% if (star.description) { %>
    <div class="description">
      <h3>Description</h3>
      <p><%= star.description %></p>
    </div>
    <% } %>

    <div class="actions">
      <a href="/stars/<%= star.id %>/edit" class="btn btn-primary">Edit Star</a>
      <a href="/stars" class="btn btn-secondary">Back to Stars</a>
      <form
        method="POST"
        action="/stars/<%= star.id %>?_method=DELETE"
        style="display: inline"
        onsubmit="return confirm('Are you sure you want to delete this star?')"
      >
        <button type="submit" class="btn btn-danger">Delete Star</button>
      </form>
    </div>
  </div>
</div>
