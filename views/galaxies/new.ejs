<div class="page-header">
  <h1>Add New Galaxy</h1>
  <p>Expand our universe by adding a new galaxy to the database</p>
</div>

<div class="form-container">
  <% if (typeof error !== 'undefined') { %>
  <div
    style="
      background: #f8d7da;
      color: #721c24;
      padding: 1rem;
      border-radius: 5px;
      margin-bottom: 2rem;
    "
  >
    <strong>Error:</strong> <%= error %>
  </div>
  <% } %>

  <form action="/galaxies" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="name">Galaxy Name *</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        placeholder="e.g., Milky Way, Andromeda"
      />
    </div>

    <div class="form-group">
      <label for="size">Size (light-years)</label>
      <input type="number" id="size" name="size" placeholder="e.g., 100000" />
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        id="description"
        name="description"
        placeholder="Describe this galaxy's characteristics, location, and notable features..."
      ></textarea>
    </div>

    <div class="form-group">
      <label for="image">Galaxy Image</label>
      <input type="file" id="image" name="image" accept="image/*" />
      <small style="color: #666; display: block; margin-top: 0.5rem">
        Upload an image of this galaxy (optional)
      </small>
    </div>

    <div style="margin-top: 2rem">
      <button type="submit" class="btn btn-success">Create Galaxy</button>
      <a href="/galaxies" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>
